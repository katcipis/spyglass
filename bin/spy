#!/usr/bin/env python

import sys
import logging

from config.loaders import load_kafka_config
from config.loaders import load_check_config

log = logging.getLogger(__name__)


def main():
    errs = []
    kafkacfg, err = load_kafka_config()
    errs.append(err)
    checkcfg, err = load_check_config()
    errs.append(err)

    abort_on_err(errs)


def abort_on_err(errs):
    fail = False
    for err in errs:
        if err is None:
            break
        fail = True
        print(err)

    if fail:
        sys.exit(1)


if __name__ == "__main__":
    main()
